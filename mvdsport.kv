
<Container>:
    canvas:
        Rectangle:
            source: 'img/2.jpg'
            size: self.size
    orientation: 'vertical'
    padding: 20
    spacing: 10

    rez: rez
    rez_2: rez_2
    exer: exer
    ti: ti
    age: age

    Label:
        font_size: '38sp'
        text: 'Укажите данные'
        size_hint_y: 0.1

    GridLayout:
        cols: 3
        spacing: '8dp'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'Статус'
            #size_hint_y: 0.3

        ToggleButton:
            size_hint_x: 0.5
            size_hint_y: None
            height: '48dp'
            text: 'Кандидат'
            group: 'g1'
            on_press:
                root.qw({'stat': 'civil'})
            #on_release: print(self.stat)


        ToggleButton:
            size_hint_x: 0.5
            size_hint_y: None
            height: '48dp'
            text: 'Сотрудник'
            group: 'g1'
            on_press: root.qw({'stat': 'military'})
            #on_release: print(self.stat)


        Label:
            text: 'Пол'
            #size_hint_y: 0.3

        ToggleButton:
            #size_hint_x: None
            size_hint_y: None
            height: '48dp'
            text: 'Мужской'
            group: 'g2'
            #on_press: root.qw({'sex': 'male'})
            on_release: root.qw({'sex': 'man'})

        ToggleButton:
            #size_hint_x: None
            size_hint_y: None
            height: '48dp'
            text: 'Женский'
            group: 'g2'
            on_release: root.qw({'sex': 'women'})

        Label:
            text: 'Возраст'
            #size_hint_y: 0.3

        Spinner:
            id: age
            text: "Возраст"
            size_hint_y: None
            height: '48dp'
#            background_normal: 'img/1.png'
            on_text:
                self.age = '25-' if self.text == "до 25 лет" else '25_30' if self.text == "от 25 до 30 лет" else '30_35' if self.text == "от 30 до 35 лет" else '35_40' if self.text == "от 35 до 40 лет" else '40_45' if self.text == "от 40 до 45 лет" else '45+' if self.text == "45 лет и старше" else '45_50' if self.text == "от 45 до 50 лет" else '50_55' if self.text == "от 50 до 55 лет" else '55+' if self.text == "55 лет и старше" else ''
                root.qw({'age': self.age})


        Label:
            text: ''

        Label:
            text: 'Упражнение'

        Spinner:
            id: exer
            text: "Упражнение"
            size_hint_y: None
            height: '48dp'
            on_text:
                self.exercise = 'run_10_10' if self.text == "Бег" else 'push_ups' if self.text == "Отжимания" else 'pull_ups' if self.text == "Подтягивания" else 'crying' if self.text == "Гиря" else 'press' if self.text == "Прес" else ''
                root.qw({'exercise': self.exercise})

        Spinner:
            id: ti
            text: "Результат"
            size_hint_y: None
            height: '48dp'
            on_text:
                root.qw({'result': self.text})

    Label:
        id: rez
        font_size: '28sp'
        halign: 'center'
        text: "Укажите все параметры"
        markup: True
        size_hint_y: 0.3

    Label:
        id: rez_2
        font_size: '28sp'
        halign: 'center'
#        valign: 'middle'
#        text: 'Вым еще необходимо:\n [color=3333ff]отжатся[color=ff3333] 50[/color][/color] раз или\n [color=3333ff]подтянутся [color=ff3333]15 [/color][/color] раз'
        markup: True
        size_hint_y: 0.3

