<TogButMy@ToggleButton>:
    size_hint: 0.8, 0.3
    height: '48dp'
    group: 'g1'
    background_color: .5,.5,1,1


<Container>:

    orientation: 'vertical'

    AccordionItem:
        title: 'Статус'

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Выберите Ваш статус'
                size_hint_y: 0.3

            BoxLayout:
                orientation: 'horizontal'
                padding: 50
                spacing: 10

                TogButMy:
                    text: 'Стажер'

                TogButMy:
                    text: 'Сотрудник'


    AccordionItem:
        title: 'Пол'

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Выберите Ваш пол'
                size_hint_y: 0.3


            BoxLayout:
                orientation: 'horizontal'
                padding: 50
                spacing: 10

                TogButMy:
                    text: 'Мужчина'

                TogButMy:
                    text: 'Женщина'

    AccordionItem:
        title: 'Возраст'

        BoxLayout:
            orientation: 'vertical'
            padding: 150
            spacing: 100

            Label:
                text: 'Укажите сколько Вам лет'
                size_hint_y: 0.3

            Spinner:
                text: "Возраст"
                values: "Меньше 18", "От 18 до 24", "От 25 до 29", "От 30 до 34", "От 35 до 39", "От 40 до 44", "Больше 45"
                #size_hint: 0.5, 0.1
                #size: (110, 40)


    AccordionItem:
        title: 'Упражнения'

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Укажите Ваши результаты в упражнениях'
                size_hint_y: 0.3


            GridLayout:
                cols: 2
                #orientation: 'vertical'
                padding: 100
                spacing: 50

                Spinner:
                    text: "Упражнение"
                    values: "Бег", "Отжимания", "Подтягивания", "Гиря"
                    size_hint: (None, None)
                    size: (110, 40)

                TextInput:
                    size_hint: (None, None)
                    size: (100, 40)
                    font_size: 30

                
    AccordionItem:
        title: 'Результат'

        BoxLayout:
            orientation: 'vertical'

            Label:
                font_size: '28sp'
                text: "Вы набрали\n [color=ff3333]       100\n[/color] [color=3333ff][/color]    баллов"
                markup: True
                size_hint_y: 0.1

            Label:
                font_size: '28sp'
                text: 'Вым еще необходимо:\n [color=3333ff]отжатся[color=ff3333] 50[/color][/color] раз или\n [color=3333ff]подтянутся [color=ff3333]15 [/color][/color] раз'
                markup: True
                size_hint_y: 0.3
