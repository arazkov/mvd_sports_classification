
<Container>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    rez: rez
    exer: exer
    ti: ti

    Label:
        font_size: '38sp'
        text: 'Укажите данные'
        size_hint_y: 0.1

    GridLayout:
        cols: 3
        spacing: '8dp'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'Статус'
            #size_hint_y: 0.3

        ToggleButton:
            size_hint_x: 0.5
            size_hint_y: None
            height: '48dp'
            text: 'Кандидат'
            group: 'g1'
            on_press: root.qw({'stat': 'civil'})
            #on_release: print(self.stat)


        ToggleButton:
            size_hint_x: 0.5
            size_hint_y: None
            height: '48dp'
            text: 'Сотрудник'
            group: 'g1'
            on_press: root.qw({'stat': 'military'})
            #on_release: print(self.stat)


        Label:
            text: 'Пол'
            #size_hint_y: 0.3

        ToggleButton:
            #size_hint_x: None
            size_hint_y: None
            height: '48dp'
            text: 'Мужской'
            group: 'g2'
            #on_press: root.qw({'sex': 'male'})
            on_release: root.qw({'sex': 'male'})

        ToggleButton:
            #size_hint_x: None
            size_hint_y: None
            height: '48dp'
            text: 'Женский'
            group: 'g2'
            #on_press: root.qw({'sex': 'female'})
            on_release: root.qw({'sex': 'female'})

        Label:
            text: 'Возраст'
            #size_hint_y: 0.3

        Spinner:
            text: "Возраст"
            values: "Меньше 18", "От 18 до 24", "От 25 до 29", "От 30 до 34", "От 35 до 39", "От 40 до 44", "Больше 45"
            size_hint_y: None
            size: (110, 40)
            on_text:
                self.age = '18-' if self.text == "Меньше 18" else '18_24' if self.text == "От 18 до 24" else '25_29' if self.text == "От 25 до 29" else '30_34' if self.text == "От 30 до 34" else '35_39' if self.text == "От 35 до 39" else '40_44' if self.text == "От 40 до 44" else '45+' if self.text == "Больше 45" else ''
                root.qw({'age': self.age})


        Label:
            text: ''
            #size_hint_y: 0.3

        Label:
            text: 'Упражнение'
            #size_hint_y: 0.3

        Spinner:
            id: exer
            text: "Упражнение"
            size_hint_y: None
            size: (110, 40)
            on_text:
                self.exercise = 'run_10_10' if self.text == "Бег" else 'push_ups' if self.text == "Отжимания" else 'pull_ups' if self.text == "Подтягивания" else 'crying' if self.text == "Гиря" else 'press' if self.text == "Прес" else ''
                root.qw({'exercise': self.exercise})

        TextInput:
            id: ti
            font_size: 30
            multiline: False
            input_type: 'number'
            #input_filter: 'int'
            on_text:
                root.qw({'result': self.text})

    Label:
        id: rez
        font_size: '28sp'
        text: "Укажите все параметры"
        markup: True
        size_hint_y: 0.3

    Label:
        font_size: '28sp'
        text: 'Вым еще необходимо:\n [color=3333ff]отжатся[color=ff3333] 50[/color][/color] раз или\n [color=3333ff]подтянутся [color=ff3333]15 [/color][/color] раз'
        markup: True
        size_hint_y: 0.5

